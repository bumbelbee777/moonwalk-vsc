{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "MoonWalk",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#types"
		},
		{
			"include": "#booleans"
		},
		{
			"include": "#function"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.mw",
				"match": "\\b(if|while|loop|return|imp)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.mw",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.mw",
					"match": "\\\\."
				}
			]
		},
		"numbers": {
			"patterns": [{
				"name": "constant.numeric.mw",
				"match": "\\b(0x[0-9a-fA-F]+|[0-9]+(\\.[0-9]+)?)\\b"
			}]
		},
		"types": {
			"patterns": [{
				"name": "storage.type",
				"match": "\\b(int|float|bool|str|noret|void)\\b"
			}]
		},
		"booleans": {
			"patterns": [{
				"name": "constant.language.boolean.mw",
				"match": "\\b(true|false|yes)\\b"
			}]
		},
		"comments": {
			"patterns": [{
				"name": "comment.line.double-slash.mw",
				"begin": "//",
				"end": "$",
				"patterns": [
					{
						"include": "#comments"
					}
				]
			},
			{
				"name": "comment.block.mw",
				"begin": "/\\*",
				"end": "\\*/",
				"patterns": [
					{
						"include": "#comments"
					}
				]
			}]
		},
		"function": {
			"patterns": [{
				"name": "entity.name.function.mw",
				"match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
			}]
		}
	},
	"scopeName": "source.mw"
}
